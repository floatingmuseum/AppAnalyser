<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:padding="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/detail_image_background"
                tools:src="@drawable/ic_icon2" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_start_app"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:background="@drawable/detail_start_background"
                        android:text="启动" />

                    <TextView
                        android:id="@+id/tv_app_setting_page"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:background="@drawable/detail_start_background"
                        android:text="详情页" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_app_export"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:background="@drawable/detail_start_background"
                        android:text="导出Apk" />

                    <TextView
                        android:id="@+id/tv_app_uninstall"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:background="@drawable/detail_start_background"
                        android:text="卸载" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_check_from_market"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:background="@drawable/detail_start_background"
                        android:text="去市场查看" />

                    <TextView
                        android:id="@+id/tv_share_app"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:background="@drawable/detail_start_background"
                        android:text="分享" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_disable_app_reminder"
            style="@style/dash_line_background"
            android:background="@drawable/dash_line_red_background"
            android:textColor="#AE5551"
            android:visibility="gone"
            android:text="此应用已停用"
            tools:visibility="visible" />

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/dash_line_background">

            <TextView
                style="@style/ParamTitleStyle"
                android:text="名称" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/ParamContentStyle"
                tools:text="AppAnalyser" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="包名" />

            <TextView
                android:id="@+id/tv_package_name"
                style="@style/ParamContentStyle"
                tools:text="com.floatingmuseum.app.analyser" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="是否系统应用" />

            <TextView
                android:id="@+id/tv_is_system"
                style="@style/ParamContentStyle"
                tools:text="否" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="是否Debug版" />

            <TextView
                android:id="@+id/tv_is_debuggable"
                style="@style/ParamContentStyle"
                tools:text="否" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="版本名" />

            <TextView
                android:id="@+id/tv_version_name"
                style="@style/ParamContentStyle"
                tools:text="1.0" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="版本号" />

            <TextView
                android:id="@+id/tv_version_code"
                style="@style/ParamContentStyle"
                tools:text="1" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="Apk大小" />

            <TextView
                android:id="@+id/tv_apk_size"
                style="@style/ParamContentStyle"
                tools:text="10mb" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="应用大小" />

            <TextView
                android:id="@+id/tv_app_size"
                style="@style/ParamContentStyle"
                tools:text="10mb" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="首次安装时间" />

            <TextView
                android:id="@+id/tv_first_install_time"
                style="@style/ParamContentStyle"
                tools:text="2019.02.20 02:22:34" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="最后更新时间" />

            <TextView
                android:id="@+id/tv_last_update_time"
                style="@style/ParamContentStyle"
                tools:text="2019.03.20 09:12:14" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="最低兼容版本" />

            <TextView
                android:id="@+id/tv_min_sdk"
                style="@style/ParamContentStyle"
                tools:text="19(4.4,Kitkat)" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="目标适配版本" />

            <TextView
                android:id="@+id/tv_target_sdk"
                style="@style/ParamContentStyle"
                tools:text="26(8.0,Oreo)" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="签名Hash值" />

            <TextView
                android:id="@+id/tv_signatures"
                style="@style/ParamContentStyle"
                tools:text="d2345hj2hjkh2jk35hjk23kjh5j" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="分配的UID" />

            <TextView
                android:id="@+id/tv_app_uid"
                style="@style/ParamContentStyle"
                tools:text="d2345hj2hjkh2jk35hjk23kjh5j" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="Apk源文件存放目录" />

            <TextView
                android:id="@+id/tv_apk_source_dir"
                style="@style/ParamContentStyle"
                tools:text="d2345hj2hjkh2jk35hjk23kjh5j" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="App数据目录" />

            <TextView
                android:id="@+id/tv_app_data_dir"
                style="@style/ParamContentStyle"
                tools:text="d2345hj2hjkh2jk35hjk23kjh5j" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="Native库目录" />

            <TextView
                android:id="@+id/tv_native_dir"
                style="@style/ParamContentStyle"
                tools:text="/system/app/ExactCalculator/lib/arm64" />

            <TextView
                style="@style/ParamTitleStyle"
                android:text="入口Activity" />

            <TextView
                android:id="@+id/tv_main_activity"
                style="@style/ParamContentStyle"
                tools:text="com.floatingmuseum.app.analyser.MainActivity" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/dash_line_background">

            <TextView
                android:id="@+id/tv_permissions_title"
                style="@style/ParamTitleStyle"
                android:text="Permissions" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_permissions_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/dash_line_background">

            <TextView
                android:id="@+id/tv_activities_title"
                style="@style/ParamTitleStyle"
                android:text="Activities" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_activities_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/dash_line_background">

            <TextView
                android:id="@+id/tv_receivers_title"
                style="@style/ParamTitleStyle"
                android:text="Receivers" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_receivers_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/dash_line_background">

            <TextView
                android:id="@+id/tv_services_title"
                style="@style/ParamTitleStyle"
                android:text="Services" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_services_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/dash_line_background">

            <TextView
                android:id="@+id/tv_providers_title"
                style="@style/ParamTitleStyle"
                android:text="Providers" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_providers_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
